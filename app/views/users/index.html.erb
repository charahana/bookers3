<div class="container">
  <div class="row">
    <div class="col-md-3">
      <aside>
        <h2>User info</h2>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <table class="table">
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </table>
        <div class="text-center mt-3">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary w-100" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2>New book</h2>
        <%= form_with(model: @book, url: books_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title" %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :body, "Opinion" %>
            <%= f.text_area :body, class: 'form-control' %>
          </div>
          <%= f.submit "Create Book", class: "btn btn-success mt-2" %>
        <% end %>
      </aside>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image(80, 80), class: "img-thumbnail" %>
                <% end %>
              </td>
              <td class="card-title"><%= user.name %></td>
              <td class="card-text"><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>