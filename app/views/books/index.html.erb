<% unless controller_name == "users" && action_name == "edit" %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <aside>
        <h2>User info</h2>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <table class="table">
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </table>
          <div class="text-center mt-3">
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary w-100" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <h2>New book</h2>
          <%= form_with(model: @book, url: books_path, local: true) do |f| %>
            <% if @book.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.label :title, "Title" %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :body, "Opinion" %>
              <%= f.text_area :body, class: 'form-control' %>
            </div>
            <%= f.submit "Create Book", class: "btn btn-success mt-2" %>
          <% end %>
      </aside>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.image.attached? %>
                    <%= image_tag book.get_image.variant(resize: "80x80"), class: "img-thumbnail" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>